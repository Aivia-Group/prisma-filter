    "module": "commonjs",
    "target": "es2019",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "removeComments": false,
    "moduleResolution": "Node",
    "noImplicitAny": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
